{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule":true,
    "allowJs": true,
    "paths": {
      "@library/av-ds-library": [
        "libs/av-ds-library/src"
      ],
      "@library/av-ds-library/*": [
        "libs/av-ds-library/src/*"
      ]
    },
  }
}